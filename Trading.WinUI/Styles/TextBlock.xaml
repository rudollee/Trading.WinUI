<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" >

	<Style TargetType="TextBlock">
		<Setter Property="Foreground" Value="{ThemeResource TextBaseColor}" />
	</Style>

	<Style x:Key="TextBase" TargetType="TextBlock" >
		<Setter Property="Foreground" Value="{ThemeResource TextBaseColor}" />
		<Setter Property="FontFamily" Value="verdana" />
		<Setter Property="VerticalAlignment" Value="Center" />
		<Setter Property="HorizontalAlignment" Value="Left" />
		<Setter Property="HorizontalTextAlignment" Value="Left" />
	</Style>

	<Style x:Key="TextMonoSpace" TargetType="TextBlock" BasedOn="{StaticResource TextBase}" >
		<Setter Property="FontFamily" Value="Dejavu Sans Mono" />
		<Setter Property="FontSize" Value="13"/>
		<Setter Property="CharacterSpacing" Value="25"/>
	</Style>

	<Style x:Key="TextMonoSpaceRight" TargetType="TextBlock" BasedOn="{StaticResource TextMonoSpace}">
		<Setter Property="HorizontalAlignment" Value="Right" />
		<Setter Property="HorizontalTextAlignment" Value="Right" />
	</Style>

	<Style x:Key="TextRight" TargetType="TextBlock" BasedOn="{StaticResource TextBase}" >
		<Setter Property="HorizontalAlignment" Value="Right" />
		<Setter Property="HorizontalTextAlignment" Value="Right" />
	</Style>
	<Style x:Key="TextCenter" TargetType="TextBlock" BasedOn="{StaticResource TextBase}" >
		<Setter Property="HorizontalAlignment" Value="Center" />
		<Setter Property="HorizontalTextAlignment" Value="Center" />
	</Style>

	<Style x:Key="PageTitleStyle" TargetType="TextBlock">
		<Setter Property="FontWeight" Value="SemiLight" />
		<Setter Property="FontSize" Value="{StaticResource LargeFontSize}" />
		<Setter Property="TextTrimming" Value="CharacterEllipsis" />
		<Setter Property="TextWrapping" Value="NoWrap" />
	</Style>

	<Style x:Key="BodyTextStyle" BasedOn="{StaticResource TextBase}" TargetType="TextBlock">
		<Setter Property="FontWeight" Value="Normal" />
		<Setter Property="FontSize" Value="{StaticResource MediumFontSize}" />
		<Setter Property="TextTrimming" Value="CharacterEllipsis" />
		<Setter Property="TextWrapping" Value="Wrap" />
	</Style>
</ResourceDictionary>
